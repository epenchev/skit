<logfile>skit.log</logfile> <!-- global parameters mandatory-->
<pidfile>skit.pid</pidfile>
<daemon>yes</daemon>
<threads>5</threads>

<!-- JSON managment API authentication -->
<admin>
	<user>some</user>
	<password>some</password>
</admin>

<!-- server workers 
to load a server <name> and <listen> are mandatory--> 
<servers>
    <server>
        <name>rtmp</name>
        <listen>1935</listen>
        <publish>allow</publish>
        <chunkSize>4000</chunkSize>
        <onplay>http://some.some</onplay>
        <options>
            <opt1>someopt1</opt1>
            <opt2>someopt2</opt2>
            <opt3>someopt1</opt3>
        </options>
    </server>
    <server>
        <name>http</name>
        <listen>8080</listen>
        <header>Cache-Control no-cache</header>
        <onplay>http://some.some</onplay>
    </server>
</servers>
    
<streams>
    <stream> <!-- live stream from DVB -->
        <name>FoxLiveTV</name>
		<source>DVBStream</source>
		<filter>MPEG2TsMP4H264</filter>
		<cashing>no</cashing>
		<seekable>no</seekable>
	</stream>
	<stream> <!-- VOD stream movie collection on HDD -->
	    <name>Movies</name>
		<source>SimpleFileSource</source>
		<filepath>/home/emo/Downloads/</filepath>
		<cashing>no</cashing>
		<seekable>yes</seekable>
	</stream>
</streams>

<!-- additional sections can be added -->
<dvr>
    <record_interval>120</record_interval> <!-- minutes -->
    <storageDir>/data/movies</storageDir>
    <!-- notify event
    <on_record_done>http://localhost:8080/record_done</on_record_done>
    -->
</dvr>
	
